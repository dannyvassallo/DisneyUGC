<main>
	<div class="container">
		<div class="row">
			<div class="col l10 offset-l1 m12 s12">
				<div id="campaign-feature" class="card large hoverable">
					<% if @campaign.feature? %>
					<div id="feature" class="card-image center-card-image">
						<%= image_tag( @campaign.feature.url ) %>
					<% elsif @campaign.video? %>
					<div id="feature" class="card-image">
						<%= videojs_rails sources: { mp4: "#{@campaign.video.url}"}, setup: "{}", controls: true, width:"auto", height:"100%", class: 'vjs-big-play-centered primary-player' %>						
					<% end %>	
						<span class="card-title campaign-title"><%= @campaign.title %></span>					
					</div>
					<div class="card-content">
			          <p><%= @campaign.description %></p>
			        </div>
			        <div class="card-action center-align">
						<%= @campaign.call_to_action %><br>
						<a class="btn waves-effect waves-light grey add-content darken-4 modal-trigger" href="#entryform">Enter Here</a>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col l10 offset-l1">			
				<h5>Recent Entries</h5>
			</div>
			<div class="col l10 offset-l1">			
				<div class = "sort_paginate_ajax">
					<%= render 'campaigns/posts' %>																
				</div>
			</div>
		</div>
	</div>	
	<div class="parallax-container">
		<div class="parallax">
			<img src="https://s3.amazonaws.com/rdugc/assets/purpleabstract.jpg">
		</div>
	</div>		
	
</main>
<%= render 'campaigns/entryform' %>
