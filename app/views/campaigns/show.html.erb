<main>
	<div class="container">
		<div class="row">
			<div class="col l10 offset-l1 m10 offset-m1 s12">
				<div id="campaign-feature" class="card large hoverable">
					<div class="card-image">
						<% if @campaign.feature? %>
							<%= image_tag( @campaign.feature.url ) %>
						<% elsif @campaign.video? %>
							<%= videojs_rails sources: { mp4: "#{@campaign.video.url}"}, setup: "{}", controls: true, width:"auto", height:"100%", class: 'vjs-big-play-centered' %>						
						<% end %>	
						<span class="card-title campaign-title"><%= @campaign.title %></span>					
					</div>
					<div class="card-content">
			          <p><%= @campaign.description %></p>
			        </div>
			        <div class="card-action center-align">
						<%= @campaign.call_to_action %><br>
						<a class="btn wave-effect wave-light grey add-content darken-4 modal-trigger" href="#entryform">Enter Here</a>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col l10 offset-l1">			
				<h5>Recent Entries</h5>
			</div>
			<div class="col l10 offset-l1">			
				<%= render 'campaigns/posts' %>
			</div>
		</div>
		<div class="row">
			<div class="col l10 offset-l1 center-align">				
				<%= will_paginate @posts %>		
			</div>															
		</div>
	</div>	
	<div class="parallax-container">
		<div class="parallax">
			<img src="https://s3.amazonaws.com/rdugc/assets/purpleabstract.jpg">
		</div>
	</div>	
</main>
<%= render 'campaigns/entryform' %>
<%= render 'campaigns/postmodals' %>





