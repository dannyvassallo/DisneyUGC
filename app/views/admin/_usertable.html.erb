  <table class="striped">
    <thead>
      <tr>
          <th data-field="id">Email Address</th>
          <th data-field="name">Is Admin?</th>
          <th data-field="name">Change Status</th>          
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <% if user.role == 'admin' %>
            <td>Yes</td>
          <% else %>
            <td>No</td>
          <% end %>
          <td>
            <% if user.role == 'admin' %>
              <%= simple_form_for(user) do |f| %>
                <%= f.input :role, :as => :hidden, :input_html => { :value => "" } %>
                <%= f.submit 'Revoke Admin', :class => 'btn' %>
              <% end %> 
            <% else %>
              <%= simple_form_for(user) do |f| %>
                <%= f.input :role, :as => :hidden, :input_html => { :value => "admin" } %>
                <%= f.submit 'Make Admin', :class => 'btn' %>
              <% end %>  
            <% end %>  
          </td>
        </tr>
      <% end %>      
    </tbody>
  </table>