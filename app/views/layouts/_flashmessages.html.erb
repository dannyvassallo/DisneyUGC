<% if flash[:notice] %>
    <script>
      var noticeMsg = '<%= "#{flash[:notice]}" %>';      
      Materialize.toast(noticeMsg, 5000, 'green accent-4');
    </script>
<% elsif flash[:error] %>
    <script>
      var errorMsg = '<%= "#{flash[:error]}" %>';        
      Materialize.toast(errorMsg, 5000, 'red darken-4');
    </script>
<% elsif flash[:alert] %>    
    <script>
      var alertMsg = '<%= "#{flash[:alert]}" %>';        
      Materialize.toast(alertMsg, 5000, 'yellow');
    </script>
<% end %>