<% @posts.each do |post| %>
	<% if post.image_url? %>
		<div class="col l3 m3 s4 xs4">
			<div class="card hoverable">
				<div class="card-image">
					<a class="feed-modal-trigger" href="<%= "#post-#{post.id}" %>">
						<img class="<%= "post-#{post.id}" %>" data-processing="<%= post.image_url_processing %>" data-id="<%= post.id %>" data-campaign="<%= post.campaign.title %>" src="<%= post.image_url.thumb.url %>">
					</a>
				</div>
			</div>
		</div>
	<% elsif post.video_url? %>
		<div class="col l3 m3 s4 xs4">
			<div class="card hoverable">
				<div class="card-image vid-card">
					<a class="feed-modal-trigger" href="<%= "#post-#{post.id}" %>">
						<img data-processing="<%= post.video_url_processing %>" data-id="<%= post.id %>" data-campaign="<%= post.campaign.title %>" class="vid-thumb <%= "post-#{post.id}" %>" src="<%= post.video_url.thumb.url %>">
					</a>
				</div>
			</div>
		</div>
	<% end %>
<% end %>
<div class="col l12 m12 s12 xs12 center-align">
	<%= will_paginate @posts %>
</div>
<%= render 'campaigns/postmodals' %>